<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_my"
    android:orientation="vertical"
    android:background="@drawable/backg"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/menu_4_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="22.55dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/menu"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="313dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/dnfbitbitttf"
            android:text="응급상세정보"
            android:textColor="#354F4E"
            android:textSize="20dp"
            android:textStyle="normal"
            />
        <RelativeLayout
            android:id="@+id/settings_6_"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22.55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp"
            android:clipToOutline="true"
            android:background="@drawable/settings"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mobile_1_0_"
            android:layout_width="360dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            />
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ghost_tab_1"
            android:layout_width="154.5dp"
            android:layout_height="32dp"
            android:clipToOutline="true"
            android:background="@drawable/_tab_item"
            android:elevation="3dp"
            android:layout_marginTop="20dp"
            />
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ghost_tab_2"
            android:layout_width="154.5dp"
            android:layout_height="32dp"
            android:layout_marginLeft="154.5dp"
            android:clipToOutline="true"
            android:background="@drawable/_tab_item1"
            android:layout_marginTop="20dp"
            />
    </FrameLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:id="@+id/hyper_table"
        android:layout_width="360dp"
        android:layout_height="409dp"
        android:clipToOutline="true"
        android:background="@drawable/table"
        android:elevation="3dp"
        />

</LinearLayout>